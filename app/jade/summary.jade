.step.summary
  .wrapper
    .hosts
      each member, key in members
        .host
          .icon
            img.shadow-icon(data-src="#{member.icon}")
            .txt=key
          .details
            .server-kind #{hostKind} Specs
            .specs
              .spec 
                .metric RAM
                .value #{member.planData.RAM} GB 
              .spec 
                .metric CPU
                .value #{member.planData.CPU} CORES
              .spec 
                .metric DISK
                .value #{member.planData.DISK} GB
              .spec.cost
                .metric #{provider} Cost  
                .value $#{member.planData.dollarsPerHr}/hr
          if isHorizontalRedund
            .total-instances
              img.shadow-icon(data-src="instance-multiply")
              .total= member.totalInstances
